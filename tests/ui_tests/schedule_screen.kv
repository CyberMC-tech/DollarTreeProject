<ScheduleScreen>:
    MDToolbar:
        title: "Schedule"
        left_action_items: [["menu", lambda x: None]]
        right_action_items: [["arrow-left", lambda x: None], ["arrow-right", lambda x: None]]
        elevation: 10

    ScrollView:
        MDList:
            id: schedule_list

    MDLabel:
        text: "Projected Total 23:10"
        halign: "center"
        pos_hint: {"center_x": .5, "center_y": .05}

    MDIconButton:
        icon: "home"
        user_font_size: "48sp"
        pos_hint: {"center_x": .5, "center_y": .1}
        on_release: app.root.current = 'home_screen'  # Adjust the behavior as needed

    # Add shift items to the MDList in Python code or using further KV language entries
